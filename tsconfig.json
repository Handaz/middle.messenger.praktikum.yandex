{
  "include": ["src", "decs.d.ts", "tests/*/*.spec.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
