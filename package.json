{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Messanger project",
  "scripts": {
    "dev": "npm run checkTsc && webpack serve --mode=development --progress",
    "start": "npm run build && node server.js",
    "build": "npm run checkTsc && npm run linter && npm run slinter && webpack",
    "checkTsc": "npx tsc",
    "linter": "npx eslint . --ext .ts --fix",
    "slinter": "npx stylelint \"**/*.scss\" --fix",
    "test": "npx mocha --require ts-node/register ",
    "dockerBuild": "npm run build && docker build -t messenger .",
    "dockerRun": "docker run -p 3000:3000 -d messenger",
    "dockerStop": "docker stop -t 0"
  },
